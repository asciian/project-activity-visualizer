{
    "manifest_version": 2,
    "name": "Project Activity Visualizer",
    "version": "0.1",

    "description": "Firefox addon to visualize project activity with commit frequency",
    "homepage_url": "https://github.com/ta2gch/ProjectActivityVisualizer",
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },
    "content_scripts": [
        {
            "matches": ["*://github.com/*"],
            "js": ["content-script.js"]
        }
    ]
}
